            <log idref='hky.kappa'/>
    	    <ESS spec='ESS' name='log' arg="@hky.kappa"/>
            <log idref='hky.kappa2'/>
    	    <ESS spec='ESS' name='log' arg="@hky.kappa2"/>
            <log spec='beast.base.evolution.tree.MRCAPrior' tree='@tree'>
