            </log>
            <!--log spec='beast.base.evolution.tree.TreeNodeLogger' tree='@tree'/-->
        </logger>
        <logger logEvery="10000" fileName="test.$(seed).log">
	        <model idref='likelihood'/>
            <log idref="likelihood"/>
            <log idref='hky.kappa'/>
            <log idref='hky.kappa2'/>
            <log spec='beast.base.evolution.tree.TreeHeightLogger' tree='@tree'/>
        </logger>
        <logger logEvery="10000" fileName="test.$(seed).trees">
            <log idref="tree"/>
        </logger>
    </run>

